@page
@model CryptoTravel.Pages.UserProfile.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-sm"></div>
    <div class="col-sm"><h1>My Wallet</h1></div>
    <div class="col-sm"></div>
</div>

<div class="row">
    <div class="col-sm" style="{border-radius: 2px;}">
       
    </div>
    <div class="col-sm">
        <button>Deposit</button>
        <input type="button" onclick="window.location.href='/Transfer';" value="Send"/>
        <button>Receive</button>
    </div>
    <div class="col-sm">
        
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].CurrencyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Wallet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
        </tr>
}
    </tbody>
</table>
